<mvc:View
    controllerName="codescale.radar.controller.NotFound"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page
        id="notFoundPage"
        title="{i18n>notFoundTitle}"
        showHeader="true"
        showNavButton="false">
        <content>
            <IllustratedMessage
                illustrationType="sapIllus-PageNotFound"
                title="{i18n>notFoundTitle}"
                description="{i18n>notFoundDescription}">
                <additionalContent>
                    <Button
                        text="{i18n>goHomeButton}"
                        press=".onNavHome"
                        type="Emphasized"/>
                </additionalContent>
            </IllustratedMessage>
        </content>
    </Page>
</mvc:View>
